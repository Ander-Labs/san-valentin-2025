    <script is:inline>
    // Variables
const no = document.querySelector('#no');
const si = document.querySelector('#si');
const mensaje = document.querySelector('#mensaje');
let rY = 0;
let rX = 0;
// Cargar app
addEventListener('DOMContentLoaded', appLista);

function appLista() {
    // Estuve probando con todos estos eventos y quedaron bien estos 2
    // no.addEventListener('mouseenter', randomF);
    // no.addEventListener('mouseout', randomF);
    // no.addEventListener('mouseover', randomF);
    no.addEventListener('click', randomF);
    no.addEventListener('mousemove', randomF);
    si.addEventListener('click', siMensaje);
}


function randomF() {
    const posicionY = [75, 45, 30, 0, 15, 90, 60];
    const posicionX = [90, 75, 60, 45, 30, 0, 15];
    let aleatorioY = Math.round(Math.random() * 10) + 1;
    let aleatorioX = Math.round(Math.random() * 10) + 1;
    // Verificar que no se repita el numero aleatorio
    if (aleatorioY === rY || aleatorioX === rX) {

        aleatorioY = Math.round(Math.random() * 10) + 1;
        aleatorioX = Math.round(Math.random() * 10) + 1;
        moverNo();
    } else {
        moverNo();
    }

    function moverNo() {
        rY = aleatorioY;
        rX = aleatorioX;

        no.style.top = `${posicionY[aleatorioY]}%`;
        no.style.right = `${posicionX[aleatorioX]}%`;
        si.classList.add('activo');
        setTimeout(() => {
            si.classList.remove('activo');
        }, 200);
    }
}

function siMensaje() {
    mensaje.classList.remove('ocultar');
    mensaje.addEventListener('click', () => {
        mensaje.classList.add('ocultar');
    });
}
</script>